// Prisma schema for MaryForward dynamic web application

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============ AUTHENTICATION (NextAuth) ============

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============ USER MODEL ============

enum UserRole {
  PATIENT
  CLINICIAN
  ADMIN
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  passwordHash  String?
  name          String?
  firstName     String?
  lastName      String?
  phone         String?
  address       String?
  city          String?
  state         String?
  zipCode       String?
  role          UserRole  @default(PATIENT)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Patient consent fields
  hasAcceptedTerms     Boolean   @default(false)
  termsAcceptedAt      DateTime?
  hasAcceptedConsent   Boolean   @default(false)
  consentAcceptedAt    DateTime?

  // Clinician-specific fields
  isApproved    Boolean   @default(false) // Clinicians need admin approval
  approvedAt    DateTime?
  approvedById  String?
  specialty     String?   // e.g., "Oncology", "Infectious Disease"
  licenseNumber String?   // Medical license number
  institution   String?   // Hospital/clinic affiliation

  accounts           Account[]
  sessions           Session[]
  cases              Case[]              // Cases created by this user (patients)
  assignedCases      Case[]              @relation("AssignedClinician") // Cases assigned to this clinician
  savedTrials        SavedTrial[]
  contactSubmissions ContactSubmission[]
  writtenReports     CaseReport[]        @relation("ReportAuthor")
  sentMessages       Message[]           @relation("MessageSender")
}

// ============ CONTACT FORM ============

enum ContactCategory {
  PATIENT
  CLINICIAN
  PARTNER
  OTHER
}

model ContactSubmission {
  id        String          @id @default(cuid())
  firstName String
  lastName  String
  email     String
  category  ContactCategory @default(OTHER)
  message   String?         @db.Text
  userId    String?
  user      User?           @relation(fields: [userId], references: [id])
  isRead    Boolean         @default(false)
  createdAt DateTime        @default(now())

  @@index([email])
  @@index([createdAt])
}

// ============ NEWSLETTER ============

model NewsletterSubscription {
  id             String    @id @default(cuid())
  email          String    @unique
  isActive       Boolean   @default(true)
  subscribedAt   DateTime  @default(now())
  unsubscribedAt DateTime?

  @@index([email])
}

// ============ PATIENT CASES ============

enum CaseStatus {
  DRAFT
  SUBMITTED
  UNDER_REVIEW
  EXPERT_REVIEW
  COMPLETED
  ARCHIVED
}

enum CaseType {
  ONCOLOGY
  INFECTIOUS_DISEASE
  OTHER
}

model Case {
  id         String     @id @default(cuid())
  userId     String
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  caseNumber String     @unique @default(cuid())
  title      String?
  caseType   CaseType
  status     CaseStatus @default(DRAFT)

  // Assigned clinician for review
  assignedClinicianId String?
  assignedClinician   User?   @relation("AssignedClinician", fields: [assignedClinicianId], references: [id])
  assignedAt          DateTime?

  // Intake data stored as JSON for flexibility
  intakeData Json?

  // Structured key fields for querying
  primaryDiagnosis   String?
  symptoms           String?  @db.Text
  currentMedications String?  @db.Text
  allergies          String?  @db.Text
  medicalHistory     String?  @db.Text

  // File uploads
  documents CaseDocument[]

  // Reports and results
  reports CaseReport[]

  // Messages between patient and clinician
  messages Message[]

  // Timestamps
  submittedAt DateTime?
  reviewedAt  DateTime?
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
  @@index([status])
  @@index([caseNumber])
  @@index([assignedClinicianId])
}

model CaseDocument {
  id         String   @id @default(cuid())
  caseId     String
  case       Case     @relation(fields: [caseId], references: [id], onDelete: Cascade)
  fileName   String
  fileType   String
  fileSize   Int
  storageKey String
  uploadedAt DateTime @default(now())

  @@index([caseId])
}

enum ReportType {
  AI_SYNTHESIS
  EXPERT_REVIEW
  FINAL_REPORT
  PATIENT_SUMMARY
}

model CaseReport {
  id            String     @id @default(cuid())
  caseId        String
  case          Case       @relation(fields: [caseId], references: [id], onDelete: Cascade)
  reportType    ReportType
  content       Json
  reviewerNotes String?    @db.Text

  // Report author (clinician)
  authorId      String?
  author        User?      @relation("ReportAuthor", fields: [authorId], references: [id])

  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@index([caseId])
  @@index([authorId])
}

// ============ SAVED CLINICAL TRIALS ============

model SavedTrial {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  trialId    String
  trialTitle String
  trialData  Json?
  notes      String?  @db.Text
  savedAt    DateTime @default(now())

  @@unique([userId, trialId])
  @@index([userId])
}

// ============ AUDIT LOG (HIPAA Compliance) ============

enum AuditAction {
  LOGIN
  LOGOUT
  VIEW_CASE
  CREATE_CASE
  UPDATE_CASE
  SUBMIT_CASE
  VIEW_REPORT
  DOWNLOAD_DOCUMENT
  EXPORT_DATA
  CASE_ASSIGNED
  CLINICIAN_APPROVED
  CLINICIAN_REJECTED
  SEND_MESSAGE
  VIEW_MESSAGES
  DOWNLOAD_MESSAGE_ATTACHMENT
}

model AuditLog {
  id         String      @id @default(cuid())
  userId     String?
  action     AuditAction
  resource   String?
  resourceId String?
  metadata   Json?
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime    @default(now())

  @@index([userId])
  @@index([action])
  @@index([createdAt])
  @@index([resourceId])
}

// ============ MESSAGING SYSTEM ============

model Message {
  id          String   @id @default(cuid())
  caseId      String
  senderId    String
  content     String   @db.Text
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  case        Case     @relation(fields: [caseId], references: [id], onDelete: Cascade)
  sender      User     @relation("MessageSender", fields: [senderId], references: [id])
  attachments MessageAttachment[]

  @@index([caseId])
  @@index([senderId])
  @@index([caseId, createdAt])
}

model MessageAttachment {
  id          String   @id @default(cuid())
  messageId   String
  fileName    String
  fileType    String
  fileSize    Int
  storageKey  String
  uploadedAt  DateTime @default(now())

  message     Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@index([messageId])
}
